<div class="container">

    <div class="row page-header">
    <h1>Sign Up For An Account</h1>
    </div>

    <div class="row">

    <% if flash[:error] %>
    <div class="alert alert-danger">
      <p><%= flash[:error] %></p>
    </div>
    <% end %>

    <%= form_tag("/signup", method: "post", class: "form") do %>
      <div class="form-group">
      <%= text_field_tag 'email', nil, placeholder: 'email', class: 'form-control input-lg', :required => true %>
      </div>
      <div class="form-group">
      <%= text_field_tag 'password', nil, placeholder: 'password', class: 'form-control input-lg', :required => true, :type => 'password' %>
      </div>
      <div class="form-group">
      <%= text_field_tag 'confirm_password', nil, placeholder: 'confirm password', class: 'form-control input-lg', :required => true, :type => 'password' %>
      </div>
      <p class="pull-right">Already have an account? Log in <a href="/login">here</a></p>
      <%= submit_tag("Sign Up", class: "btn btn-success btn-lg") %>
    <% end %>
    </div>

</div>
