<div class="container">

    <div class="row page-header">
    <h1>GeneWise</h1>
    </div>

    <div class="row">
    <p class="lead"><i class="glyphicon glyphicon-search"></i> Search by gene symbol</p>

    <%= form_tag("/search", method: "post", class: "form") do %>
      <div class="form-group">
      <%= text_field_tag 'q', nil, placeholder: 'e.g. BRCA2, ABHD1', class: 'form-control', :required => true %>
      </div>
      <%= submit_tag("Search", class: "btn btn-default") %>
    <% end %>
    </div>

</div>